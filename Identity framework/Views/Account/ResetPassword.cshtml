@{
    ViewData["Title"] = "Reset Password";
}
@model Identity_framework.ViewModel.ResetViewModel

<h1>Forgot Your Password?</h1>
<form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
    <input hidden asp-for="UserId"/>
    <input hidden asp-for="code" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="test-danger"></span>
        </div>
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="test-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Submit</button>
        </div>
    </div>
</form>
