@model Identity_framework.ViewModel.ExternalLoginConfirmationViewModel

<h1>Register</h1>
<h3>Continue with @ViewData["providerDisplayName"] account</h3>

<form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["returnUrl"]">
	<h4>you have succesfully authenticated with your @ViewData["providerDisplayName"] account, please provide some information to make your experience better</h4>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Log in</button>
        </div>
    </div>
</form>